# fastlane/Matchfile
git_url("***github.com/webcache/githubactionsstore.git")
storage_mode("git")
type("appstore")

app_identifier(["com.getmaximumfreedomandfitness.getmaximumfitiosapp"])
team_id("4H5UK5L4A8")

# Allow an explicit override first (useful for debugging)
if ENV["MATCH_KEYCHAIN_NAME"] && !ENV["MATCH_KEYCHAIN_NAME"].empty?
  keychain_name(ENV["MATCH_KEYCHAIN_NAME"])
# CI runners: use the CI keychain (correct modern suffix)
elsif ENV["CI"] || ENV["GITHUB_ACTIONS"]
  keychain_name("ci-keys.keychain-db")
# Local dev: default to login keychain
else
  keychain_name("login.keychain-db")
end

# Optional: HTTPS basic auth for the match repo
git_basic_authorization(ENV["MATCH_GIT_BASIC_AUTHORIZATION"]) if ENV["MATCH_GIT_BASIC_AUTHORIZATION"]

# Keep behavior predictable
git_branch("master")
shallow_clone(false)
clone_branch_directly(false)